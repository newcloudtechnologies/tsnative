{
    "name": "tsnative",
    "version": "0.1.0",
    "scripts": {
        "transpile": "tsc",
        "start": "playground/start.sh",
        "test": "bash -x -exec 'test/start.sh'",
        "clean_test": "rm -rf test/build",
        "clean_playground": "rm -rf playground/build playground/extension",
        "lint": "tslint --project tsconfig.json",
        "format": "tslint --project tsconfig.json --fix",
        "build": "sh std/build.sh && tsc && npm run pkg",
        "prepack": "npm run build",
        "pkg": "pkg bin --output pkg/compiler",
        "publishToLocalRegistry": "npm-prebuilt-dependencies publish"
    },
    "bin": {
        "tsnative": "tsnative.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tslint --project tsconfig.json --fix",
            "pre-push": "JOBS=-j$(cat /proc/cpuinfo | grep \"processor\" | wc -l) npm test"
        }
    },
    "prettier": {
        "printWidth": 120
    },
    "devDependencies": {
        "@types/lodash": "^4.14.161",
        "@types/node": "^13.13.1",
        "commander": "^5.0.0",
        "husky": "^4.2.5",
        "llvm-node": "git+ssh://git@gitea.devos.club:222/antiq-mirrors/llvm-node.git#wip/delay_load",
        "lodash": "^4.17.20",
        "npm-prebuilt-dependencies": "^0.0.1",
        "pkg": "5.3.2",
        "prettier": "^2.0.5",
        "segfault-handler": "^1.0.1",
        "tslint": "^6.1.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typescript": "^3.8.3"
    },
    "files": [
        "std/include/*",
        "std/cmake/*",
        "std/decorators/*",
        "std/definitions/*",
        "std/lib/libtsnative-std.a",
        "cmake/*",
        "pkg/*",
        "tsnative.sh"
    ]
}
