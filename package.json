{
    "name": "tsnative",
    "version": "0.2.21",
    "scripts": {
        "transpile": "tsc --outDir out/build",
        "start": "./start.sh",
        "test": "bash -x -exec 'test/testrunner.sh --clean'",
        "runtime_test": "ts-node test/runtime_test.ts",
        "declarator_test": "ts-node declarator/test/runner.ts",
        "stage_app_test": "bash -x -exec 'test/testrunner.sh --test-filter app'",
        "package_app_test": "echo 'TODO: implement end-to-end package test inside tsnative to run before publication'",
        "clean": "rm -rf out",
        "lint": "tslint --project tsconfig.json",
        "format": "tslint --project tsconfig.json --fix",
        "build": "npm run build_std && npm run build_host && npm run transpile && npm run pkg",
        "build_std": "sh std/build.sh",
        "build_host": "sh build_host.sh",
        "pkg": "pkg compiler --output out/install/bin/compiler && pkg verifier --output out/install/bin/verifier",
        "pack_stage": "cp package.json out/install && cd out/install && npm pack",
        "publishToLocalRegistry": "cd out/install && npm-prebuilt-dependencies publish"
    },
    "bin": {
        "tsnative": "tsnative.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tslint --project tsconfig.json --fix"
        }
    },
    "prettier": {
        "printWidth": 120
    },
    "devDependencies": {
        "@types/lodash": "^4.14.161",
        "@types/node": "^13.13.1",
        "commander": "^5.0.0",
        "husky": "^4.2.5",
        "llvm-node": "git+ssh://git@gitea.devos.club:222/antiq-mirrors/llvm-node.git#wip/delay_load",
        "lodash": "^4.17.20",
        "npm-prebuilt-dependencies": "^0.0.1",
        "pkg": "5.3.2",
        "prettier": "^2.0.5",
        "segfault-handler": "^1.0.1",
        "tslint": "^6.1.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typescript": "^3.8.3",
        "ts-node": "^10.4.0",
        "chalk": "^4.1.2"
    },
    "files": [
        "*"
    ]
}
