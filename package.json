{
  "name": "typescript-llvm",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/main.ts",
    "test": "tsc && ts-node test/test-runner.ts",
    "lint": "tslint --project tsconfig.json",
    "format": "tslint --project tsconfig.json --fix",
    "updateSnapshots": "ts-node test/test-runner.ts --updateSnapshots",
    "prepare": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tslint --project tsconfig.json --fix",
      "pre-push": "tsc && ts-node test/test-runner.ts"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "bin": {
    "tsvmc": "./bin/tsvmc"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "llvm-node": "MichaReiser/llvm-node#master",
    "lookpath": "^1.0.4",
    "module-alias": "^2.2.2",
    "ramda": "^0.25.0",
    "segfault-handler": "^1.0.1",
    "stdlib": "git+ssh://git@dsfgit.devos.club:222/eugene.makarov/std-typescript-llvm.git",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/diff": "^3.5.1",
    "@types/node": "^9.6.9",
    "@types/ramda": "^0.25.36",
    "diff": "^3.5.0",
    "husky": "^4.2.5",
    "prettier": "1.12.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "_moduleAliases": {
    "@builtins": "build/tsbuiltins",
    "@cpp": "build/cppintegration",
    "@emitter": "build/emitter",
    "@emitter/*": "build/emitter/*",
    "@generator": "build/generator",
    "@mangling": "build/mangling",
    "@scope": "build/scope",
    "@utils": "build/utils"
  }
}
