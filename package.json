{
  "name": "typescript-llvm",
  "version": "0.1.0",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/main.ts",
    "test": "ts-node test/test-runner.ts",
    "lint": "tslint --project tsconfig.json",
    "format": "tslint --project tsconfig.json --fix",
    "updateSnapshots": "ts-node test/test-runner.ts --updateSnapshots"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tslint --project tsconfig.json --fix",
      "pre-push": "ts-node test/test-runner.ts"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "dependencies": {
    "commander": "^2.15.1",
    "llvm-node": "^2.1.0",
    "lookpath": "^1.0.4",
    "module-alias": "^2.2.2",
    "ramda": "^0.25.0",
    "segfault-handler": "^1.0.1",
    "typescript": "^3.7.1"
  },
  "devDependencies": {
    "@types/diff": "^3.5.1",
    "@types/node": "^9.6.9",
    "@types/ramda": "^0.25.36",
    "diff": "^3.5.0",
    "husky": "^4.2.5",
    "prettier": "1.12.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "_moduleAliases": {
    "@builtins": "src/tsbuiltins",
    "@cpp": "src/cppintegration",
    "@emitter": "src/emitter",
    "@emitter/*": "src/emitter/*",
    "@generator": "src/generator",
    "@mangling": "src/mangling",
    "@scope": "src/scope",
    "@utils": "src/utils"
  }
}
