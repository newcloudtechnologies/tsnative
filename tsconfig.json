{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "downlevelIteration": true
  },
  "include": [
    "src/*",
    "src/**/*"
  ]
}
