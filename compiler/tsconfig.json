{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "downlevelIteration": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "mapRoot": "sourceMaps"
  },
  "include": [
    "src/*",
    "src/**/*"
  ]
}
